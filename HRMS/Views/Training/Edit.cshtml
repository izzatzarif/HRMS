@model HRMS.Models.Training

@{
    ViewData["Title"] = "Edit Latihan";
    Layout = "_Layout";
}

<h2>Edit Latihan</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Nama Latihan</label>
        <input type="text" asp-for="TrainingName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Tarikh</label>
        <input type="date" asp-for="Date" class="form-control" required />

    </div>
    <div class="form-group">
        <label>Lokasi</label>
        <input type="text" asp-for="Location" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Kemaskini</button>
</form>
